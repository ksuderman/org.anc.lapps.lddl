/*
 * Functions used to register web services and datasources.
 */
include 'ANC' // For the copyright notice.

void register_datasources(list) {
    list.each {
        register_datasource(it)
    }
}

register_datasource = { source ->
    service {
        id source.id
        name source.name
        url source.url
        protocol 'SOAP_RPC_ENCODED'
        domain DOMAIN
        type DATASOURCE
        lang 'en-US'
        copyright COPYRIGHT
        resource MASC_ID
        license APACHE
        description source.desc
        allow 'commercial', 'nonprofit', 'research'
        control 'client', 'server'
        federate true
    }
    news "Configured ${source.name}"
}

register_services = { list ->
    list.each {
        register_service(it)
    }
}

register_service = { svc ->
    service {
        id svc.id
        name svc.name
